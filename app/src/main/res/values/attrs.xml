<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="ProgressVeiw">
        <attr name="progress" format="integer"></attr>
        <attr name="bgColor" format="color"/>
        <attr name="fgColor" format="color"/>
        <attr name="r" format="integer"/>
        <attr name="strokeWidth" format="integer"/>

        <attr name="drawStyle">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
        <attr name="max" format="integer"/>

    </declare-styleable>

    <attr name="firstColor" format="color" />
    <attr name="secondColor" format="color" />
    <attr name="circleWidth" format="dimension" />
    <attr name="dotCount" format="integer" />
    <attr name="splitSize" format="integer" />
    <attr name="bg" format="reference"></attr>

    <declare-styleable name="CustomVolumControlBar">
        <attr name="firstColor" />
        <attr name="secondColor" />
        <attr name="circleWidth" />
        <attr name="dotCount" />
        <attr name="splitSize" />
        <attr name="bg" />
    </declare-styleable>



</resources>